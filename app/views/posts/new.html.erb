 <h1> New Post </h1>
    <%= form_for @post do |f| %>            
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author%>   
    <%= f.text_field :author %>

    <%= f.label :body %>
    <%= f.text_field :body %>

    <%= f.submit %>
 <% end %>

 <!-- 
    form_for @post do |f| is a rails helper that creates a form
    f.label creates a label
    f.text_field creates an input type text
 -->